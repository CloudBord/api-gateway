{
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Namespace": "propnull",
      "Type": "KubernetesServiceDiscoveryProvider"
    }
    //"BaseUrl": "http://localhost:7200"
  },
  "Routes": [

    {
      "ServiceName": "keycloak",
      "UpstreamPathTemplate": "/identity/realms/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamPathTemplate": "/realms/{everything}",
      "DownstreamScheme": "http"
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "keycloak",
      //    "Port": 8080
      //  }
      //]
    },
    {
      "ServiceName": "keycloak",
      "UpstreamPathTemplate": "/identity/resources/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/resources/{everything}",
      "DownstreamScheme": "http"
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "keycloak",
      //    "Port": 8080
      //  }
      //]
    },
    {
      "ServiceName": "keycloak",
      "UpstreamPathTemplate": "/identity/js/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/js/{everything}",
      "DownstreamScheme": "http"
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "keycloak",
      //    "Port": 8080
      //  }
      //]
    },

    {
      "ServiceName": "whiteboard-service",
      "UpstreamPathTemplate": "/boards",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/boards",
      "DownstreamScheme": "http"
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "whiteboard-service",
      //    "Port": 80
      //  }
      //]
    },
    {
      "ServiceName": "whiteboard-service",
      "UpstreamPathTemplate": "/boards/{id}",
      "UpstreamHttpMethod": [ "Delete" ],
      "DownstreamPathTemplate": "/api/boards/{id}",
      "DownstreamScheme": "http"
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "whiteboard-service",
      //    "Port": 80
      //  }
      //]
    },
    {
      "ServiceName": "whiteboard-service",
      "UpstreamPathTemplate": "/boards/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/boards/{id}",
      "DownstreamScheme": "http",
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "whiteboard-service",
      //    "Port": 80
      //  }
      //],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "PeriodTimespan": 10,
        "Limit": 4
      },
      "FileCacheOptions": {
        "TtlSeconds": 10
      }
    },
    {
      "ServiceName": "whiteboard-service",
      "UpstreamPathTemplate": "/boards",
      "UpstreamHttpMethod": [ "Put" ],
      "DownstreamPathTemplate": "/api/boards",
      "DownstreamScheme": "http"
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "whiteboard-service",
      //    "Port": 80
      //  }
      //]
    },

    {
      "ServiceName": "session-handler",
      "UpstreamPathTemplate": "/party/{room}",
      "UpstreamHttpMethod": [ "GET", "DELETE", "PUT", "PATCH", "POST" ],
      "DownstreamPathTemplate": "/{room}",
      "DownstreamScheme": "ws"
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "session-handler",
      //    "Port": 8080
      //  }
      //]
    }
  ]
}